{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"module": "es2015",
		"declaration": true,
		"baseUrl": "",
		"stripInternal": true,
		"outDir": "./dist",
		"inlineSources": true,
		"types": [],
		"importHelpers": true,
		"emitDecoratorMetadata": true
	},
	"files": [
		"src/index.ts"
	],
	"exclude": [
		"src/test.entry.ts",
		"src/**/*.spec.ts",
		"demo"
	],
	"angularCompilerOptions": {
		"strictMetadataEmit": true,
		"skipTemplateCodegen": true,
		"trace": true,
		"annotationsAs": "decorators"
	}
}