{
	"name": "ezy-chart",
	"version": "0.2.1",
	"description": "Angular components based on Chart.js and ECharts",
	"main": "./bundles/ezy-chart.umd.js",
	"module": "./index.js",
	"typings": "./index.d.ts",
	"scripts": {
		"start": "concurrently --raw \"webpack-dev-server -d --host 0.0.0.0\" \"yarn run test:watch\"",
		"build:demo": "webpack --env=production",
		"build:umd": "webpack --config webpack.config.umd.ts",
		"build:ngc": "ngc -p tsconfig-ngc.json",
		"build:dist": "yarn run build:umd && yarn run build:ngc",
		"build:clean": "del-cli dist",
		"test": "karma start --single-run && yarn run build:dist && yarn run build:clean",
		"test:watch": "karma start --auto-watch",
		"commit": "git-cz",
		"compodoc": "compodoc -p tsconfig-compodoc.json -d docs --disableGraph --disableCoverage --disablePrivate --disableProtected --disableInternal --disableLifeCycleHooks",
		"gh-pages": "git checkout gh-pages && git merge master --no-edit --no-ff && del-cli *.js *.js.map && yarn run build:demo && yarn run compodoc && git add . && git commit -m \"ci: build demo and docs\" && git push && git checkout master",
		"copyfiles": "copyfiles package.json LICENSE README.md CHANGELOG.md dist",
		"prerelease": "yarn test",
		"release:git": "git add package.json && git commit -m \"ci: bump version number\" && standard-version --first-release --no-verify && git push --follow-tags origin master",
		"release:npm": "yarn run build:dist && yarn run copyfiles && yarn publish dist",
		"release": "yarn run release:git && yarn run release:npm",
		"postrelease": "yarn run build:clean && yarn run gh-pages",
		"commitmsg": "commitlint -e",
		"codecov": "cat coverage/lcov.info | codecov",
		"prettier": "prettier --write",
		"precommit": "lint-staged"
	},
	"lint-staged": {
		"{demo,src}/**/*.ts": [
			"yarn run prettier",
			"git add"
		]
	},
	"config": {
		"commitizen": {
			"path": "@commitlint/prompt"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-angular"
		]
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ztan/ezy-chart.git"
	},
	"keywords": [
		"angular5",
		"angular"
	],
	"author": "Zhendong Tan",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/ztan/ezy-chart/issues"
	},
	"homepage": "https://github.com/ztan/ezy-chart#readme",
	"devDependencies": {
		"@angular/common": "^6.0.6",
		"@angular/compiler": "^6.0.6",
		"@angular/compiler-cli": "^6.0.6",
		"@angular/core": "^6.0.6",
		"@angular/forms": "^6.0.6",
		"@angular/language-service": "^6.0.6",
		"@angular/platform-browser": "^6.0.6",
		"@angular/platform-browser-dynamic": "^6.0.6",
		"@commitlint/cli": "^7.0.0",
		"@commitlint/config-angular": "^7.0.1",
		"@commitlint/prompt": "^7.0.0",
		"@compodoc/compodoc": "^1.1.3",
		"@mattlewis92/webpack-karma-die-hard": "^1.0.4",
		"@ngtools/webpack": "^6.0.8",
		"@types/chai": "^4.1.4",
		"@types/chart.js": "^2.7.23",
		"@types/echarts": "^0.0.13",
		"@types/html-webpack-plugin": "^2.30.3",
		"@types/lodash": "^4.14.110",
		"@types/mocha": "^5.2.3",
		"@types/sinon-chai": "^3.2.0",
		"@types/webpack": "^4.4.2",
		"@types/webpack-env": "^1.13.6",
		"angular2-template-loader": "^0.6.2",
		"chai": "^4.1.2",
		"chart.js": "^2.7.2",
		"codecov": "^3.0.2",
		"codelyzer": "^4.3.0",
		"commitizen": "^2.10.1",
		"concurrently": "^3.6.0",
		"copyfiles": "^2.0.0",
		"core-js": "^2.5.7",
		"del-cli": "^1.1.0",
		"echarts": "^4.1.0",
		"html-loader": "^0.5.5",
		"html-webpack-plugin": "^3.2.0",
		"husky": "0.15.0-rc.12",
		"istanbul-instrumenter-loader": "^3.0.1",
		"karma": "^2.0.4",
		"karma-chrome-launcher": "^2.2.0",
		"karma-coverage-istanbul-reporter": "^2.0.1",
		"karma-mocha": "^1.3.0",
		"karma-mocha-reporter": "^2.2.5",
		"karma-sourcemap-loader": "^0.3.7",
		"karma-webpack": "^3.0.0",
		"lint-staged": "^7.2.0",
		"lodash": "^4.17.10",
		"mocha": "^5.2.0",
		"offline-plugin": "^5.0.5",
		"prettier": "^1.13.5",
		"rxjs": "^6.2.1",
		"sinon": "^6.0.0",
		"sinon-chai": "^3.2.0",
		"standard-version": "^4.4.0",
		"ts-node": "^6.1.2",
		"tslint": "^5.10.0",
		"tslint-config-mwl": "^0.4.1",
		"tslint-loader": "^3.6.0",
		"typescript": "2.7.x",
		"webpack": "^4.12.0",
		"webpack-angular-externals": "^1.0.2",
		"webpack-cli": "^3.0.8",
		"webpack-config-utils": "^2.3.0",
		"webpack-dev-server": "^3.1.4",
		"webpack-rxjs-externals": "^2.0.0",
		"zone.js": "^0.8.26"
	},
	"peerDependencies": {
		"@angular/core": ">=5.0.0 <7.0.0",
		"chart.js": ">=2.7.1 <3.0.0",
		"echarts": ">=4.0.0 <5.0.0",
		"lodash": ">=4.17.4 <5.0.0",
		"moment": ">=2.18.0 <3.0.0"
	}
}
