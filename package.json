{
  "name": "ezy-chart",
  "version": "0.0.1",
  "description": "Angular components based on Chart.js",
  "main": "./bundles/ezy-chart.umd.js",
  "module": "./index.js",
  "typings": "./index.d.ts",
  "scripts": {
    "start": "concurrently --raw \"webpack-dev-server -d\" \"yarn run test:watch\"",
    "build:demo": "webpack --env=production",
    "build:umd": "webpack --config webpack.config.umd.ts",
    "build:ngc": "ngc -p tsconfig-ngc.json",
    "build:dist": "yarn run build:umd && yarn run build:ngc",
    "build:clean": "del-cli dist",
    "test": "karma start --single-run && yarn run build:dist && yarn run build:clean",
    "test:watch": "karma start --auto-watch",
    "commit": "git-cz",
    "compodoc": "compodoc -p tsconfig-compodoc.json -d docs --disableGraph --disableCoverage --disablePrivateOrInternalSupport",
    "gh-pages": "git checkout gh-pages && git merge master --no-edit --no-ff && del-cli *.js *.js.map && yarn run build:demo && yarn run compodoc && git add . && git commit -m \"chore: build demo and docs\" && git push && git checkout master",
    "copyfiles": "copyfiles package.json LICENSE README.md CHANGELOG.md dist",
    "prerelease": "yarn test",
    "release:git": "git add package.json && git commit -m \"chore: bump version number\" && standard-version --first-release && git push --follow-tags origin master",
    "release:npm": "yarn run build:dist && yarn run copyfiles && yarn publish dist",
    "release": "yarn run release:git && yarn run release:npm",
    "postrelease": "yarn run build:clean && yarn run gh-pages",
    "commitmsg": "commitlint -e",
    "codecov": "cat coverage/lcov.info | codecov",
    "prettier": "prettier --write",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "{demo,src}/**/*.ts": [
      "yarn run prettier",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/prompt"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ztan/ezy-chart.git"
  },
  "keywords": [
    "angular5",
    "angular"
  ],
  "author": "Zhendong Tan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ztan/ezy-chart/issues"
  },
  "homepage": "https://github.com/ztan/ezy-chart#readme",
  "devDependencies": {
    "@angular/common": "^5.0.2",
    "@angular/compiler": "^5.0.2",
    "@angular/compiler-cli": "^5.0.2",
    "@angular/core": "^5.0.2",
    "@angular/forms": "^5.0.2",
    "@angular/language-service": "^5.0.2",
    "@angular/platform-browser": "^5.0.2",
    "@angular/platform-browser-dynamic": "^5.0.2",
    "@commitlint/cli": "^4.3.0",
    "@commitlint/config-angular": "^4.3.0",
    "@commitlint/prompt": "^4.3.0",
    "@compodoc/compodoc": "^1.0.4",
    "@mattlewis92/webpack-karma-die-hard": "^1.0.4",
    "@ngtools/webpack": "^1.8.1",
    "@types/chai": "^4.0.5",
    "@types/chart.js": "^2.7.0",
    "@types/html-webpack-plugin": "^2.28.0",
    "@types/lodash": "^4.14.85",
    "@types/mocha": "^2.2.44",
    "@types/sinon": "^4.0.0",
    "@types/sinon-chai": "^2.7.29",
    "@types/webpack": "^3.8.1",
    "@types/webpack-env": "^1.13.2",
    "angular2-template-loader": "^0.6.2",
    "chai": "^4.1.2",
    "chart.js": "^2.7.1",
    "codecov": "^3.0.0",
    "codelyzer": "^4.0.1",
    "commitizen": "^2.9.6",
    "concurrently": "^3.5.0",
    "copyfiles": "^1.2.0",
    "core-js": "^2.5.1",
    "del-cli": "^1.1.0",
    "fork-ts-checker-webpack-plugin": "^0.2.8",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "istanbul-instrumenter-loader": "^3.0.0",
    "karma": "^1.7.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^1.3.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.6",
    "lint-staged": "^5.0.0",
    "lodash": "^4.17.4",
    "mocha": "^4.0.1",
    "offline-plugin": "^4.8.4",
    "prettier": "^1.8.2",
    "rxjs": "^5.5.2",
    "sinon": "^4.1.2",
    "sinon-chai": "^2.14.0",
    "standard-version": "^4.2.0",
    "ts-loader": "^3.1.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "tslint-config-mwl": "^0.2.1",
    "tslint-loader": "^3.5.3",
    "typescript": "~2.6.1",
    "webpack": "^3.8.1",
    "webpack-angular-externals": "^1.0.2",
    "webpack-config-utils": "^2.3.0",
    "webpack-dev-server": "^2.9.4",
    "webpack-rxjs-externals": "^1.1.0",
    "zone.js": "^0.8.18"
  },
  "peerDependencies": {
    "@angular/core": ">=5.0.0 <6.0.0",
    "chart.js": ">=2.7.1 <3.0.0",
    "moment": ">=2.18.0 <3.0.0"
  }
}
